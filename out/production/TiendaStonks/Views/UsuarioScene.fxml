<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPaneMain" prefHeight="733.0" prefWidth="1070.0"
            style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="Controller.UsuarioController">
    <children>
        <Pane layoutY="42.0" prefHeight="121.0" prefWidth="1070.0" style="-fx-background-color: #9229f5">
            <children>
                <Label layoutX="118.0" layoutY="45.0" text="Usuarios" textFill="WHITE">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="71.0" fitWidth="82.0" layoutX="26.0" layoutY="25.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/Gender_Neutral_User_icon-icons.png"/>
                    </image>
                </ImageView>
                <Label layoutX="868.0" layoutY="82.0" text="Control de usuarios" textFill="WHITE">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
        <Label layoutX="14.0" layoutY="14.0" text="Get more, Pay Less ♥"/>
        <GridPane layoutX="25.0" layoutY="212.0" prefHeight="383.0" prefWidth="677.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="130.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="322.0" minHeight="10.0" prefHeight="321.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TableView fx:id="tableUser" onContextMenuRequested="#setImageView" onMouseClicked="#setImageView"
                           prefHeight="326.0" prefWidth="677.0" stylesheets="@../Styles/tableView.css"
                           GridPane.rowIndex="1">
                    <columns>
                        <TableColumn fx:id="IdColumn" prefWidth="75.0" text="Carnet"/>
                        <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Nombre"/>
                        <TableColumn fx:id="secondNameColumn" prefWidth="99.0" text="Apellido"/>
                        <TableColumn fx:id="cedulaColumn" prefWidth="97.0" text="Cedula"/>
                        <TableColumn fx:id="rolColumn" prefWidth="75.0" text="Rol"/>
                        <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Correo"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <Pane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <TextField id="text-fieldUser" fx:id="txtBuscar" layoutX="14.0" layoutY="16.0"
                                   onMousePressed="#populateTable" prefHeight="25.0" prefWidth="260.0"
                                   promptText="Buscar....." stylesheets="@../Styles/textfield.css"/>
                        <Button id="buttonBuscar" layoutX="287.0" layoutY="16.0" mnemonicParsing="false"
                                onAction="#findName" prefHeight="36.0" prefWidth="48.0"
                                stylesheets="@../Styles/button.css">
                            <graphic>
                                <ImageView fitHeight="26.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../resources/images/seo-social-web-network-internet_340_icon-icons.com_61497.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonRegistrar" graphicTextGap="10.0" layoutX="460.0" layoutY="17.0"
                                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false" onAction="#registrarEmpleado" prefHeight="33.0"
                                prefWidth="174.0" styleClass="buttonUser" stylesheets="@../Styles/button.css"
                                text="Añadir Usuario">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../resources/images/more_13201%20(1).png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </Pane>
            </children>
        </GridPane>
        <ImageView fx:id="userImage" fitHeight="261.0" fitWidth="291.0" layoutX="749.0" layoutY="299.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Label layoutX="827.0" layoutY="14.0" text="Bienvenido,">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label fx:id="lblWelcome" layoutX="902.0" layoutY="14.0" text="UserName">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button fx:id="closeButton" layoutX="1012.0" layoutY="1.0" mnemonicParsing="false" onAction="#closeWindow"
                prefHeight="40.0" prefWidth="57.0" style="-fx-background-color: transparent">
            <graphic>
                <ImageView fitHeight="34.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/Close_Icon_Dark_icon-icons.com_69143.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnEditar" layoutX="44.0" layoutY="656.0" mnemonicParsing="false" onAction="#editUser"
                prefHeight="25.0" prefWidth="95.0" styleClass="buttonUser" stylesheets="@../Styles/button.css"
                text="Editar"/>
        <Button fx:id="btnEliminar" layoutX="151.0" layoutY="656.0" mnemonicParsing="false" onAction="#deleteUser"
                prefHeight="25.0" prefWidth="95.0" styleClass="buttonUser" stylesheets="@../Styles/button.css"
                text="Eliminar"/>
        <ImageView fx:id="imgPerfil" fitHeight="42.0" fitWidth="48.0" layoutX="973.0" layoutY="12.0" pickOnBounds="true"
                   preserveRatio="true"/>
        <Button layoutX="838.0" layoutY="656.0" mnemonicParsing="false" onAction="#backToLogin" prefHeight="25.0"
                prefWidth="129.0" styleClass="buttonUser" stylesheets="@../Styles/button.css" text="Volver al Login"/>
    </children>
</AnchorPane>
