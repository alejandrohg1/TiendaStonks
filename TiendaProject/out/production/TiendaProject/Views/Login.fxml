<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane" onMouseMoved="#setTime" prefHeight="490.0"
            prefWidth="818.0" style="-fx-background-color: white"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="Controller.LoginController">
    <children>
        <VBox layoutX="380.0" prefHeight="98.0" prefWidth="438.0">
            <children>
                <VBox prefHeight="18.0" prefWidth="363.0"/>
                <Label text="Hello.">
                    <VBox.margin>
                        <Insets left="20.0" top="4.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Aharoni Bold" size="23.0"/>
                    </font>
                </Label>
                <Label text="Welcome Back">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Aharoni Bold" size="23.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <Button fx:id="loginButton" layoutX="562.0" layoutY="365.0" mnemonicParsing="false" onAction="#loginAction"
                prefHeight="41.0" prefWidth="184.0" styleClass="button1" stylesheets="@../Styles/button.css"
                text="Login"/>
        <AnchorPane layoutX="409.0" layoutY="159.0" prefHeight="89.0" prefWidth="389.0">
            <children>
                <Label layoutX="28.0" layoutY="7.0" text="USERNAME" textFill="#c5c5c5">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                </Label>
                <TextField id="text-field" fx:id="txtUsername" layoutX="28.0" layoutY="29.0" onMouseClicked="#clearText"
                           prefHeight="25.0" prefWidth="301.0" stylesheets="@../Styles/textfield.css" text="Rebeca"/>
                <Label fx:id="errorName" layoutX="28.0" layoutY="59.0"/>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="409.0" layoutY="266.0" prefHeight="83.0" prefWidth="397.0">
            <children>
                <Label layoutX="31.0" text="PASSWORD" textFill="#c5c5c5"/>
                <PasswordField id="text-field" fx:id="txtPassword" layoutX="31.0" layoutY="21.0"
                               onMouseClicked="#clearText2" prefHeight="25.0" prefWidth="301.0"
                               stylesheets="@../Styles/textfield.css" text="1234"/>
                <Label fx:id="errorLabel" layoutX="31.0" layoutY="59.0"/>
            </children>
        </AnchorPane>
        <Pane layoutY="-7.0" prefHeight="510.0" prefWidth="381.0" styleClass="linear-grad"
              stylesheets="@../Styles/button.css">
            <children>
                <ImageView fitHeight="137.0" fitWidth="381.0" layoutY="159.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/LogoTiendaPng.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
        <Button fx:id="buttonClose" mnemonicParsing="false" onAction="#closePane"
                style="-fx-background-color: transparent">
            <graphic>
                <ImageView accessibleRole="BUTTON" fitHeight="26.0" fitWidth="22.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/1486564399-close_81512.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
